VALUES(SEQ_PRODUCTO.NEXTVAL,'Impresora Epson L555',1,950);
COMMIT;

UPDATE PRODUCTO SET NOMBRE='Impresora Epson L556', STOCK=3, PRECIO=879
WHERE ID_CODIGO=3;

